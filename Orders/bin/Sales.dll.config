<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>

  <log4net>
    <appender name="logAppender" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="Exception_Logs\%property{ExceptionLogName}.txt"/>
      <appendToFile value="true"/>
      <rollingStyle value="Size"/>
      <maximumFileSize value="500KB"/>
      <maxSizeRollBackups value="10"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{dd/MM/yyyy hh:mm:ss tt} [%thread] %-5level %logger  - %message%newline"/>
      </layout>
    </appender>
    <appender name="ExceptionlogAppender" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="Exception_Logs\Exceptions\%property{LogName}.txt"/>
      <appendToFile value="true"/>
      <rollingStyle value="Size"/>
      <maximumFileSize value="500KB"/>
      <maxSizeRollBackups value="10"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{dd/MM/yyyy hh:mm:ss tt} [%thread] %-5level %logger  - %message%newline"/>
      </layout>
    </appender>
    <root>
      <level value="INFO"/>
      <appender-ref ref="logAppender"/>
    </root>
    <logger name="Logs" additivity="false">
      <level value="DEBUG"/>
      <appender-ref ref="logAppender"/>
    </logger>
    <logger name="ExceptionLogs" additivity="false">
      <level value="DEBUG"/>
      <appender-ref ref="ExceptionlogAppender"/>
    </logger>
  </log4net>
  <system.web>
    <compilation debug="true" targetFramework="4.5" />
    <httpRuntime targetFramework="4.5" />
  </system.web>
  <connectionStrings>
    <add name="OrdersDbConnectionString" connectionString="Persist Security Info=False;User ID=sa;Password=BlueKiteBrandNew;Initial Catalog=Orders;Data Source=192.168.1.9;pooling=true;Min Pool Size=10;Max Pool Size=200"/>
    <add name="SalesDbConnectionString" connectionString="Persist Security Info=False;User ID=sa;Password=BlueKiteBrandNew;Initial Catalog=Orders;Data Source=192.168.1.9;pooling=true;Min Pool Size=10;Max Pool Size=200"/>
  </connectionStrings>
</configuration>